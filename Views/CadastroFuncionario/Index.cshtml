@model IEnumerable<ProjetoTCC.Models.Funcionario_Empresa>

@{
    ViewBag.Title = "Funcionários Cadastrados";
Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Funcionários Cadastrados</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Empresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_Nascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RG)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RG)
            </td>
            <td>
                @Html.ActionLink("Detalhes", "Details", new { id = item.idFuncionario }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.idFuncionario })
            </td>
        </tr>
    }
</table>
<br />
<a class="btn- btn-dark btn-lg" href="@Url.Action("Administrar", "AdmSistema")">
    Voltar para painel administrador
</a>
